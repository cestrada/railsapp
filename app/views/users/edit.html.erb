<%- model_class = User -%>

<h1><%=t '.title', :default => [:'helpers.titles.edit', 'Edit %{model}'], :model => model_class.model_name.human.titleize %></h1>

<%= form_for @user, :html => { :class => "form-horizontal user" } do |f| %>
  <div class="form-group">
    <%= f.label :username, :class => 'control-label col-lg-2' %>
    <div class="col-lg-4">
      <%= f.text_field :username, :class => 'form-control', disabled: true %>
      <%= f.error_span(:username) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-lg-2' %>
    <div class="col-lg-4">
      <%= f.text_field :email, :class => 'form-control', disabled: true %>
      <%= f.error_span(:email) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, :class => 'control-label col-lg-2' %>
    <div class="col-lg-4">
      <%= f.password_field :password, :class => 'form-control', :id => 'first_field' %>
      <%= f.error_span(:password) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, :class => 'control-label col-lg-2' %>
    <div class="col-lg-4">
      <%= f.password_field :password_confirmation, :class => 'form-control' %>
      <%= f.error_span(:password_confirmation) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :role_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-4">
      <%= f.select(:role_id, @roles.collect {|u| [u.name, u.id]} ) %>
      <%= f.error_span(:role_id) %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-4">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
