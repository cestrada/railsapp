<%= form_for @box, :html => { :class => "form-horizontal box" } do |f| %>

  <% if @box.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@box.errors.count, "error") %> prohibited this box from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @box.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :box_number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-3">
      <%= f.number_field :box_number, :class => 'form-control', :id => 'first_field' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-3">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                boxes_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
