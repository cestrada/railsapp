<body style="background-color:#770007">
  <%= form_for @user, :url => password_reset_path(params[:id]), :html => { :class => "form-horizontal user" } do |f| %>
    <div class="form-signin">
    <div class="text-center"><%= image_tag('password.png') %></div><br>
    <div class="form-group">
      <div class="col-lg-12"><%= f.label :password %></div>
      <div class="col-lg-12">
        <%= f.password_field :password, :class => 'form-control' %>
        <%= f.error_span(:password) %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-12"><%= f.label :password_confirmation %></div>
      <div class="col-lg-12">
        <%= f.password_field :password_confirmation, :class => 'form-control' %>
        <%= f.error_span(:password_confirmation) %>
      </div>
    </div>
    <br>
    <a href="/login"><span class="glyphicon glyphicon-chevron-left"></span> Regresar</a>
    <button class="btn btn-primary" type="submit" style="float:right">Restablecer</button>
    <% end %>
  </div>
